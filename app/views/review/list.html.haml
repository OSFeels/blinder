.proposal_list
  %h4= "Submitted proposals for #{ @event.title }"
  %table
    %thead
      %tr
        %th
          Slug
        %th
          Notes
        %th
          Updated
    %tbody
      - @proposals.each do |proposal|
        %tr
          %td
            = link_to proposal.slug[0,6], review_path(@event, proposal), class: 'slug'
          %td.notes=  notes_for proposal
          %td.updated= last_updated proposal