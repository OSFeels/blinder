!!!
%html
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :'http-equiv' => "X-UA-Compatible", :content => "IE=edge" }
    %meta{ :name => "description", :content => "" }
    %meta{ :name => "viewport", :content => "width=device-width" }

    %title= @title || "Steel City Ruby: CFP"

    = stylesheet_link_tag "application"

    = javascript_include_tag "application"

    = csrf_meta_tags

  %body
    %main
      = link_to content_tag(:h1, "Steel City Ruby"), "http://steelcityruby.org", class: 'logo'
      .notice= flash[:notice]
      = render 'shared/sign_out'
      .content= yield
    %footer=  image_tag 'skyline.png', alt: "Pittsburgh downtown skyline"
